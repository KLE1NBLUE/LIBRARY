<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kimming.bookadmin.mapper.BookMapper">

    <resultMap id="BaseResultMap" type="cn.kimming.bookadmin.pojo.Book">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="author" jdbcType="VARCHAR" property="author"/>
        <result column="category_id" jdbcType="BIGINT" property="categoryId"/>
        <result column="publisher_id" jdbcType="BIGINT" property="publisherId"/>
    </resultMap>

    <resultMap id="findAllResultMap" extends="BaseResultMap" type="cn.kimming.bookadmin.pojo.Book">
        <association property="category" javaType="cn.kimming.bookadmin.pojo.Category">
            <result column="cname" property="name"/>
        </association>
        <association property="publisher" javaType="cn.kimming.bookadmin.pojo.Publisher">
            <result column="pname" property="name"/>
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        id, `name`, code, author, category_id, publisher_id
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from book
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="findAll" resultMap="findAllResultMap">
        select
            b.id, b.`name`, b.code, b.author, b.category_id, b.publisher_id,
            c.name as cname, p.name as pname
        from book b left join category c on b.category_id = c.id left join publisher p on b.publisher_id = p.id
    </select>

    <select id="selectCountByCategoryId" resultType="java.lang.Long">
        select count(0)
        from book
        where category_id = #{categoryId}
    </select>
    <select id="selectCountByPublisherId" resultType="java.lang.Long">
        select count(0)
        from book
        where publisher_id = #{publisherId}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete
        from book
        where id = #{id,jdbcType=BIGINT}
    </delete>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="cn.kimming.bookadmin.pojo.Book"
            useGeneratedKeys="true">
        insert into book (`name`, code, author,
                          category_id, publisher_id)
        values (#{name,jdbcType=VARCHAR}, #{code,jdbcType=VARCHAR}, #{author,jdbcType=VARCHAR},
                #{categoryId,jdbcType=BIGINT}, #{publisherId,jdbcType=BIGINT})
    </insert>
    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="cn.kimming.bookadmin.pojo.Book"
            useGeneratedKeys="true">
        insert into book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                `name`,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="author != null">
                author,
            </if>
            <if test="categoryId != null">
                category_id,
            </if>
            <if test="publisherId != null">
                publisher_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="code != null">
                #{code,jdbcType=VARCHAR},
            </if>
            <if test="author != null">
                #{author,jdbcType=VARCHAR},
            </if>
            <if test="categoryId != null">
                #{categoryId,jdbcType=BIGINT},
            </if>
            <if test="publisherId != null">
                #{publisherId,jdbcType=BIGINT},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="cn.kimming.bookadmin.pojo.Book">
        update book
        <set>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="code != null">
                code = #{code,jdbcType=VARCHAR},
            </if>
            <if test="author != null">
                author = #{author,jdbcType=VARCHAR},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId,jdbcType=BIGINT},
            </if>
            <if test="publisherId != null">
                publisher_id = #{publisherId,jdbcType=BIGINT},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>
    <update id="updateByPrimaryKey" parameterType="cn.kimming.bookadmin.pojo.Book">
        update book
        set `name`       = #{name,jdbcType=VARCHAR},
            code         = #{code,jdbcType=VARCHAR},
            author       = #{author,jdbcType=VARCHAR},
            category_id  = #{categoryId,jdbcType=BIGINT},
            publisher_id = #{publisherId,jdbcType=BIGINT}
        where id = #{id,jdbcType=BIGINT}
    </update>
</mapper>